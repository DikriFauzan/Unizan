{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "integration/**/*",
    "registry/**/*",
    "runtime/**/*",
    "server_bridge/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "runtime/snapshots", 
    "runtime/sandbox"
  ]
}
